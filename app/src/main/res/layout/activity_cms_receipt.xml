<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:background="@color/back_bg"
    android:orientation="vertical">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Transaction Receipt"
                android:textColor="@android:color/black" />

            <LinearLayout
                android:id="@+id/shareView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/back_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_12sdp">

                <ImageView
                    android:id="@+id/appLogo"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/rnd_logo"
                    android:layout_gravity="left"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/addressDetailsView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:layout_toLeftOf="@+id/operatorView">

                        <TextView
                            android:id="@+id/companyNameTv"
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:gravity="center_vertical"
                            android:text="@string/app_name"
                            android:textColor="@android:color/black" />
                        <TextView
                            android:id="@+id/addressTv"
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/companyName"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:gravity="center_vertical"
                            android:textColor="@android:color/black" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/operatorView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="right|center_vertical"
                        android:layout_alignParentRight="true">

                        <TextView
                            android:id="@+id/opNameTv"
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:gravity="right"
                            android:text="@string/app_name"
                            android:textColor="@color/black" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/operatorImage"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            app:srcCompat="@drawable/rnd_logo"
                            />
                    </LinearLayout>

                </RelativeLayout>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_2sdp"
                    app:cardMaxElevation="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    app:cardBackgroundColor="@color/colorPrimaryDark">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@color/lightWhite"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:layout_marginLeft="@dimen/_1sdp"
                        android:layout_marginRight="@dimen/_1sdp">

                        <ImageView
                            android:id="@+id/statusIcon"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            app:srcCompat="@drawable/ic_check_mark"
                            app:tint="@color/green" />

                        <TextView
                            android:id="@+id/statusTv"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/green" />


                        <TextView
                            android:id="@+id/statusMsg"
                            style="@style/TextAppearance.AppCompat.Body2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:gravity="center"
                            android:textColor="@android:color/black" />
                        <TextView
                            android:id="@+id/titleTv"
                            style="@style/TextAppearance.AppCompat.Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="Transaction Details"
                            android:textColor="@android:color/black" />


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/transactionReceiptRv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:nestedScrollingEnabled="false"
                            tools:itemCount="4"
                            tools:listitem="@layout/adapter_receipt_details"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/shopDetailsView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:text="Shop Details"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/outletDetail"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:gravity="center"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:padding="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/bt_repeat"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/rounded_accent"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:visibility="gone">


                    <TextView

                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:text="Repeat"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bt_share"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/rounded_accent"
                    android:backgroundTint="@color/colorPrimary"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp">


                    <TextView

                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:text="Share"
                        android:textColor="@android:color/white" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/bt_whatsapp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/whatsappColor"
                    android:background="@drawable/rounded_accent"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:visibility="gone">


                    <TextView

                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:text="Whatsapp"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/closeIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_3sdp"
        android:layout_alignParentRight="true"
        android:padding="@dimen/_8sdp"
        app:srcCompat="@drawable/ic_cancel_black_24dp" />
</RelativeLayout>