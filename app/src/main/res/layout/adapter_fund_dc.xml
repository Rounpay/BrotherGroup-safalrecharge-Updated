<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/rect_fill">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0px">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:elevation="6dp"
                card_view:cardCornerRadius="4dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:id="@+id/ll_Amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/normal"
                            android:gravity="left"
                            android:text="Amount"
                            android:textColor="@color/red"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/Amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/balanceLabel"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/normal"
                            android:gravity="left"
                            android:text="000"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tidLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_Amount"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:fontFamily="@font/normal"
                        android:gravity="left"
                        android:text="Status : "
                        android:textColor="@color/green"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_Amount"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_toRightOf="@+id/tidLabel"
                        android:fontFamily="@font/normal"
                        android:gravity="left"
                        android:text=""
                        android:textColor="@color/grey"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/balanceLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/normal"
                            android:gravity="left"
                            android:text="Current Balance"
                            android:textColor="@color/red"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/balanceLabel"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/normal"
                            android:gravity="left"
                            android:text="000"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>

                    <!-- <android.support.v7.widget.AppCompatTextView
                         android:id="@+id/date"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_below="@+id/tidLabel"
                         android:layout_marginTop="10dp"
                         android:fontFamily="@font/normal"
                         android:gravity="left"
                         android:text="120 aug 2017 27:22:3930"
                         android:textColor="@color/grey"
                         android:textSize="@dimen/_12sdp" />-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tidLabel"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_6sdp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/receivedByLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/fromLabel"
                                android:fontFamily="@font/normal"
                                android:gravity="left"
                                android:text="ReceivedBy : "
                                android:textColor="@color/grey"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/receivedBy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/fromLabel"
                                android:layout_toRightOf="@id/fromLabel"
                                android:fontFamily="@font/normal"
                                android:gravity="left"
                                android:text=""
                                android:textColor="@color/grey"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_6sdp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/walletTypeLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/receivedByLabel"
                                android:fontFamily="@font/normal"
                                android:gravity="left"
                                android:text="Wallet Type : "
                                android:textColor="@color/grey"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/walletType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/receivedByLabel"
                                android:layout_toRightOf="@id/fromLabel"
                                android:fontFamily="@font/normal"
                                android:gravity="left"
                                android:text=""
                                android:textColor="@color/grey"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_6sdp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/remarkLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/walletTypeLabel"
                                android:fontFamily="@font/normal"
                                android:gravity="left"
                                android:text="Remark : "
                                android:textColor="@color/grey"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/remark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/walletTypeLabel"
                                android:layout_toRightOf="@id/remarkLabel"
                                android:fontFamily="@font/normal"
                                android:gravity="left"
                                android:text=""
                                android:textColor="@color/grey"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_6sdp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/fromLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/date"
                                android:fontFamily="@font/normal"
                                android:gravity="left"
                                android:text="From : "
                                android:textColor="@color/grey"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/from"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/date"
                                android:layout_toRightOf="@id/fromLabel"
                                android:fontFamily="@font/normal"
                                android:gravity="left"
                                android:text=""
                                android:textColor="@color/grey"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:gravity="center_vertical|right">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                app:srcCompat="@drawable/ic_calendar_icon"
                                app:tint="@color/color_grey" />

                            <TextView
                                android:id="@+id/date"
                                style="@style/TextAppearance.AppCompat.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="hghgjghwqdvw"
                                android:textColor="@color/color_grey" />
                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>