<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/white"
    android:padding="@dimen/_10sdp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/_2sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:outlineSpotShadowColor="@color/transparent_cardview"
            android:layout_margin="@dimen/_2sdp">

            <LinearLayout
                android:id="@+id/shareView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/curved_style_for_layout"
                >

                <RelativeLayout
                    android:layout_width="match_parent"

                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_centerInParent="true"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_90sdp"
                        app:cardCornerRadius="@dimen/_45sdp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/rnd_logo"
                            android:layout_gravity="center"
                            android:padding="@dimen/_2sdp"/>

                    </androidx.cardview.widget.CardView>
                    <ImageView
                        android:id="@+id/cameraView"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/_8sdp"
                        android:visibility="gone"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/circle_filled_white"
                        app:srcCompat="@drawable/ic_camera_black_24dp"
                        app:tint="@color/dark_grey" />
                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/titleView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_4sdp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_centerInParent="true"
                        android:background="@color/colorPrimaryDark"
                        android:visibility="gone"/>

                    <TextView
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@android:color/white"
                        android:fontFamily="sans-serif"
                        android:paddingLeft="@dimen/_12sdp"
                        android:paddingRight="@dimen/_12sdp"
                        android:text="ALL IN ONE BHIM UPI QR"
                        android:textColor="@color/colorPrimaryDark"
                        />
                </RelativeLayout>
                <TextView
                    android:id="@+id/detail"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:lineSpacingExtra="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="ALL IN ONE BHIM UPI QR"
                    android:textColor="@color/colorPrimaryDark" />
                <ImageView
                    android:id="@+id/qrcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/rnd_logo" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_centerInParent="true"
                        android:background="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/upiId"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@android:color/white"
                        android:fontFamily="sans-serif"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingRight="@dimen/_15sdp"
                        android:text="BUBBLEID@UPI"
                        android:textColor="@color/colorPrimaryDark"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/OutletName"
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="NA"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>

                <TextView
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="Scan &amp; Pay with any BHIM UPI app"
                    android:textColor="@color/colorPrimaryDark"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/qr_upi" />

                <TextView
                    android:id="@+id/custCare"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@android:color/white"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="CUSTOMER CARE"
                    android:textColor="@android:color/black" />



            </LinearLayout>
        </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/btnView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="@dimen/_10sdp">

        <TextView
            android:id="@+id/download"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_weight="1"
            android:background="@drawable/rounded_primary_border"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:padding="@dimen/_6sdp"
            android:text="Download"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/share"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_border_accent"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:padding="@dimen/_6sdp"
            android:text="Share"
            android:textColor="@color/colorAccent" />
    </LinearLayout>
</LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>