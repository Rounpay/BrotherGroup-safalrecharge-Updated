            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:background="@color/grey"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/slabView"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/calanderIcon"
                        android:layout_width="@dimen/_11sdp"
                        android:layout_height="@dimen/_11sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        app:srcCompat="@drawable/ic_calendar_icon"
                        app:tint="@color/colorPrimary" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/joinByIcon"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:text="Join Date"
                        android:textColor="@color/colorPrimary" />


                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/dateTv"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="30 Dec 2019 11:12 AM "
                    android:textColor="@color/black" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/beneAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statusView"

        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/verifyBtn"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:foreground="?selectableItemBackgroundBorderless"
            android:gravity="center"
            android:minWidth="@dimen/_80sdp"
            android:text="Verify"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/pressed"/>




        <Button
            android:id="@+id/updateBtn"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:foreground="?selectableItemBackgroundBorderless"
            android:gravity="center"
            android:minWidth="@dimen/_80sdp"
            android:visibility="gone"
            android:text="Update"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/darkGreen"/>
        <Button
            android:id="@+id/deleteBtn"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:foreground="?selectableItemBackgroundBorderless"
            android:gravity="center"
            android:minWidth="@dimen/_80sdp"
            android:text="Delete"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/red1"/>


    </LinearLayout>

</LinearLayout>





