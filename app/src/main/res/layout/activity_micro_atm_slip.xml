                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:gravity="center_vertical"
                                    android:padding="@dimen/_5sdp"
                                    android:text=""
                                    android:textColor="@color/colorAccent" />
                            </LinearLayout>

