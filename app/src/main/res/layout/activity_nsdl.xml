            <LinearLayout
                android:id="@+id/enterAadharView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.AppCompat.Body2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:text="Name :"
                    android:textColor="@color/colorPrimary" />

                <EditText
                    android:id="@+id/et_name"
                    style="@style/body2_condensed_medium_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:drawableLeft="@drawable/ic_person"
                    android:drawableTint="#504774"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/e_b"
                    android:ellipsize="end"
                    android:hint="Enter Name"
                    android:inputType="text"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:padding="@dimen/_12sdp"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/enterAccountNoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_10sdp">

                    <TextView
                        style="@style/TextAppearance.AppCompat.Body2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="Enter Mobile :"
                        android:textColor="@color/colorPrimary" />


                </FrameLayout>

                <EditText
                    android:id="@+id/et_numberData"
                    style="@style/body2_condensed_medium_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/e_b"
                    android:ellipsize="end"
                    android:drawableTint="#504774"
                    android:drawableLeft="@drawable/ic_phone_android_black_24dp"
                    android:hint="Enter Mobile Number"
                    android:drawablePadding="@dimen/_5sdp"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:padding="@dimen/_12sdp"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/selectBankView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    style="@style/TextAppearance.AppCompat.Body2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:text="Gender :"
                    android:textColor="@color/colorPrimary"
                    app:buttonTint="@android:color/black" />

                <RelativeLayout
                    android:id="@+id/genderBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/r_u">

                    <TextView
                        android:id="@+id/gender"
                        android:drawablePadding="@dimen/_5sdp"
                        style="@style/body2_condensed_medium_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/arrowDown"
                        android:ellipsize="end"
                        android:drawableTint="#504774"
                        android:drawableLeft="@drawable/ic_gender"
                        android:hint="Select Gender"
                        android:maxLines="1"
                        android:padding="@dimen/_12sdp"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/darker_gray" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/arrowDown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_5sdp"
                        app:srcCompat="@drawable/i_a_d_d"
                        app:tint="@color/colorPrimary" />
                </RelativeLayout>
            </LinearLayout>
            <TextView
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:text="Email :"
                android:textColor="@color/colorPrimary" />

            <EditText
                android:id="@+id/et_email"
                style="@style/body2_condensed_medium_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_email_outline"
                android:layout_marginLeft="@dimen/_10sdp"
                android:drawableTint="#504774"
                android:drawablePadding="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/e_b"
                android:ellipsize="end"
                android:hint="Enter Email Address"
                android:inputType="textEmailAddress"


                android:maxLines="1"
                android:padding="@dimen/_12sdp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/warningBox"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/red_border"
                android:layout_marginTop="@dimen/_15sdp">
                <CheckBox
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:gravity="top"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/checkBox"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/btn_withdrawl"
                    style="@style/body2_condensed_medium_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:fontFamily="sans-serif"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textAlignment="textStart"
                    android:elevation="@dimen/_3sdp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:text="@string/nsdl_terms_String"
                    android:textColor="@color/colorPrimary"
                    tools:ignore="RtlCompat" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/btnView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/panStatus"
                    style="@style/body2_condensed_medium_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:background="@drawable/r_a_b"
                    android:elevation="@dimen/_3sdp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:gravity="center"
                    android:minWidth="@dimen/_140sdp"
                    android:padding="@dimen/_6sdp"
                    android:text="Pan Status"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/submitData"
                    style="@style/body2_condensed_medium_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_17sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_primary"
                    android:elevation="@dimen/_3sdp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:gravity="center"
                    android:minWidth="@dimen/_140sdp"
                    android:padding="@dimen/_6sdp"
                    android:text="Submit"
                    android:textColor="@color/white" />
            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>